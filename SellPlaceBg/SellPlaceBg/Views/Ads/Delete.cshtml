@model SellPlaceBg.Data.Ad

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-center" style="color: red; font-weight: bolder;">Are you sure you want to @ViewBag.Title this?</h2>
<hr />
<div class="row">
    <div class="col-sm-2">
        <img src="@Model.ImgURL" class="img-responsive" />
    </div>
    <div class="col-sm-8">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Discription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Discription)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price) BGN
            </dd>
        </dl>
    </div>

    <div class="col-sm-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color detail-btn detail-price">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
