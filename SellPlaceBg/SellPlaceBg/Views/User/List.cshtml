@model IEnumerable<SellPlaceBg.Data.ApplicationUser>

@{
    ViewBag.Title = "Users list";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="">
                             <td>@item.Id</td>
                             <td>@item.FullName</td>
                             <td>@item.UserName</td>
                             <td>
                                 @Html.ActionLink("Edit", "Edit", "User", new { @id = item.Id }, null) |
                                 @Html.ActionLink("Delete", "Delete", "User", new { @id = item.Id }, null)
                             </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

