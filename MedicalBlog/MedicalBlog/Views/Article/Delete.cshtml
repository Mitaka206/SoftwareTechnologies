@model MedicalBlog.Models.Article

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h1 style="text-align: center">Are you sure you want to delete this article?</h1>
    <div>
        @using (Html.BeginForm("Delete", "Article", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Theme, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-6">
                        @Html.TextBoxFor(m => m.Theme, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-6">
                        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "15" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        @Html.ActionLink("Cancel", "Index", "Article", null, new { @class = "btn btn-default" })
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
        }

    </div>
</div>
