    @model List<myBlog.Models.Article>
<div class="span5 offsetHalf block">
    <h3 class="title" style="text-decoration: underline; text-align: right; padding-right: 12px"><strong>New from Blog</strong></h3>
    
    <div class="row">
        <div class="col-sm-12">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <hr>
                    <article>
                        <h4 class="title">
                            @Html.ActionLink(@item.Title, "Index", "Articles") @*for Edit*@
                        </h4>

                        <div class="content">
                            @Html.Raw(Utils.CutText(item.Content))
                        </div>

                        <footer style="text-shadow: 2px 2px 7px #000">
                            @Html.ActionLink("Read more...", "Index", "Articles") @*for Edit*@
                        </footer>
                    </article>
                    
                </div>
                
            }
        </div>
    </div>
</div>
