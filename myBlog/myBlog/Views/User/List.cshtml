@model List<myBlog.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div class="row">
    <div class="col-sm-10">

        <div class="col-md-10">

            <table class="table table-hover table-striped">
                <thead>
                    <tr class="head-table">
                        <th>Id</th>
                        <th>User Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        if (ViewBag.Admins.Contains(user.UserName))
                        {
                            @:<tr class="info">
                        }
                        else
                        {
                            @:<tr>
                        }
                        
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id}, null) |
                                @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, null)
                            </td>
                    }
                </tbody>
            </table>

        </div>

    </div>
    <div class="col-sm-2">
        test
    </div>
</div>